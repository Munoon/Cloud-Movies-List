schema {
    query: Query,
    mutation: Mutation
}

type Movie {
    id: ID!,
    name: String!,
    hasAvatar: Boolean!
}

input CreateMovie {
    name: String!,
    avatarImageId: String
}

type PagedMovie {
    totalPages: Int!,
    totalElements: Int!,
    movies: [Movie]!
}

type Query {
    movie(id: ID): Movie
    latestMovies(count: Int, page: Int): PagedMovie
}

type Mutation {
    addMovie(newMovie: CreateMovie!): Movie
}